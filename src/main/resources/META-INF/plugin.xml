            <keyboard-shortcut first-keystroke="control shift ENTER" keymap="$default"/>
            <keyboard-shortcut first-keystroke="control shift ENTER" keymap="Emacs"/>
        </action>

        <action id="com.github.strindberg.emacsj.actions.word.movenextword"
