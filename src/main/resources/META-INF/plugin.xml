                class="com.github.strindberg.emacsj.actions.kill.KillAction"
                text="Kill Line">
            <keyboard-shortcut first-keystroke="control K" keymap="$default"/>
            <keyboard-shortcut first-keystroke="control K" keymap="Emacs"/>
