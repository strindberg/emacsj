            <keyboard-shortcut first-keystroke="control BACK_SPACE" keymap="$default"/>
            <keyboard-shortcut first-keystroke="control BACK_SPACE" keymap="Emacs"/>
        </action>
        <action id="com.github.strindberg.emacsj.actions.space.onespace"
